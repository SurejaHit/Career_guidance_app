<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.example.surejahit.career_guidance_app.CareerAfter10th">

    <TextView
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="After 10th"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textSize="40dp"
        android:textColor="#FFFFFF"
        android:background="#2196F3"/>
    <Button
        android:id="@+id/btnsc"
        android:layout_marginTop="50dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="11-12th  Science"
        android:textColor="#ffff"
        android:textSize="25dp"
        android:background="@drawable/button_selector"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:id="@+id/btncom"
        android:layout_marginTop="20dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="11-12th Commerce"
        android:background="@drawable/button_selector"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:id="@+id/btnart"
        android:layout_marginTop="20dp"
        android:layout_width="250dp"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:text="11-12th Arts"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/btndp"
        android:layout_marginTop="20dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:text="Diploma in any Field"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"/>


</LinearLayout>

